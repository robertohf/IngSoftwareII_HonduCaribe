        <a class="site_title"><%= image_tag "logo.png", style: "width: 48px"%> Bienvenido </a>
      </div>
      <div class="clearfix"></div>

      <% if current_user %>
      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
