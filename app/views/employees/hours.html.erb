<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>HonduCaribe</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <%= form_tag employees_path, remote: true, method: :get, class: "js-employees-filter form-inline" do %>
              <%= text_field_tag :q, params[:q], placeholder: "Buscar...", class: "form-control", display: "inline-block" %>
                <%= button_tag type: "submit", class: "btn btn-default", display: "inline-block" do %>
                  <span class="input-group-btn"> Ir! </span>
                <%end%>
      	   <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-xs-12">
        <div class="x_panel" style="height:600px; ">
          <div class="x_title">
            <h2>Listado de Empleados</h2>
            <div class="clearfix"></div>
          </div>
          <%= form_for(:report, remote: true, html: {id:"date_form", class:"row"}) do |f| %>
            <div class="col-xs-6">
              <%= f.label :from, "Desde: ", class:"col-xs-2" %>
              <%= f.date_field :from, class: "form-control", value: Date.today, class:"col-xs-10", onchange: "$('#date_form').submit();" %>
            </div>
            <div class="col-xs-6">
              <%= f.label :to, "Hasta: ", class:"col-xs-2"%>
              <%= f.date_field :to, class: "form-control", value: Date.today, class:"col-xs-10", onchange: "$('#date_form').submit();" %>
            </div>
          <% end %>
          <div style="float: center; border-left: 500px">
            <div class="js-employees-table" id="table_div">
              <%= render partial: "hours_table", locals: {employees: @employees, time_in: Date.today, time_out: Date.today} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
