
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>HonduCaribe</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <%= form_tag employees_path, remote: true, method: :get, class: "js-employees-filter form-inline" do %>
              <%= text_field_tag :q, params[:q], placeholder: "Buscar...", class: "form-control", display: "inline-block" %>
                <%= button_tag type: "submit", class: "btn btn-default", display: "inline-block" do %>
                  <span class="input-group-btn"> Ir! </span>
                <%end%>
      	   <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px; ">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
          <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
            <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Empleados Activos</a>
            </li>
            <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Empleados Inactivos</a>
            </li>
          </ul>
          <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">

            <div class="col-md-12 col-sm-12 col-xs-12">
              <div style="float: center; border-left: 800px">
                <div class="js-employees-table">
                  <%= render partial: "table", locals: { employees: @employees} %>
                </div>
              </div>
            </div>
            </div>

            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab" style="text-align: center">

            <div class="col-md-12 col-sm-12 col-xs-12">
              <div style="float: center; border-left: 800px">
                <div class="js-employees-table">
                  <%= render partial: "table", locals: { employees: @inactiveemployees} %>
                </div>
              </div>
            </div>
            </div>

          </div>
        </div>
        <%= link_to "Cancelar", employees_path%>
      </div>

        </div>
    </div>
  </div>
    </div>
  </div>
</div>
