<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>HonduCaribe</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Ir!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px; ">
          <div class="x_title">
            <h2><%=@dept%></h2>
            <div class="clearfix"></div>
          </div>
          <div style="float: center; border-left: 500px">
            <h3>Areas</h3>
                <table class="data table table-striped no-margin" style="text-align: center; width: 100%">
                  <thead>
                    <tr>
                      <th style= "text-align: center">Codigo Puesto</th>
                      <th style= "text-align: center">Area</th>
                      <th style= "text-align: center">Sub Area</th>
                    </tr>
                  </thead>
                  <tbody>
                      <%- @work_structures.each do |f| %>
                        <tr>
                          <td><%= f.id %></td>
                          <td><%= link_to f.area, work_structure_path(f) %></td>
                          <td><%= f.sub_area %></td>
                        </tr>
                      <%- end %>
                  </tbody>
                </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
