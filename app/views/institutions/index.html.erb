<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>HonduCaribe</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Ir!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px; ">
          <div class="x_title">
            <h2>Listado de Instituciones</h2>
            <div class="clearfix"></div>
          </div>
          <div style="float: center; border-left: 500px">
            <table class="table table-hover">
              <thead style="font-size: 18px; font-family: Fjalla One, sans-serif; color: #00263D">
                <tr>
                  <th>Nombre de Institucion</th>
                  <th>Descripcion</th>
                </tr>
              </thead>
              <tbody>
                <%- @institutions.each do |f| %>
                  <tr>
                    <td><%= link_to f.name, institution_path(f.id) %></td>
                    <td><%= f.description %></td>
                    <th>
                      <%= link_to "Eliminar", f, method: :delete, data: {confirm: "Estas Seguro?"}, class: "btn btn-danger" %>
                    </th>

                  </tr>
                <%- end %>
              </tbody>
            </table>
            <%= link_to new_institution_path, class: "btn btn-success" do %>
              <i class="fa fa-edit m-right-xs"></i> Anadir Institucion
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
